   <language SPRAS="E">
    <textElement ID="I" KEY="001" ENTRY="Tables Selection" LENGTH="16 "/>
    <textElement ID="I" KEY="002" ENTRY="Table" LENGTH="5 "/>
    <textElement ID="I" KEY="003" ENTRY="NÂº of lines" LENGTH="11 "/>
